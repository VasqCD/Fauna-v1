<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema base Material Design 3 - Solo modo claro -->
    <style name="Theme.Fauna" parent="Theme.Material3.Light">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/fauna_primary</item>
        <item name="colorOnPrimary">@color/fauna_on_primary</item>
        <item name="colorPrimaryContainer">@color/fauna_primary_variant</item>
        <item name="colorOnPrimaryContainer">@color/fauna_on_primary</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/fauna_secondary</item>
        <item name="colorOnSecondary">@color/fauna_on_secondary</item>
        <item name="colorSecondaryContainer">@color/fauna_secondary_variant</item>
        <item name="colorOnSecondaryContainer">@color/fauna_on_secondary</item>

        <!-- Colores de superficie -->
        <item name="colorSurface">@color/fauna_surface</item>
        <item name="colorOnSurface">@color/fauna_on_surface</item>
        <item name="colorSurfaceVariant">@color/fauna_surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/fauna_on_surface_variant</item>

        <!-- Colores de fondo -->
        <item name="android:colorBackground">@color/fauna_background</item>
        <item name="colorOnBackground">@color/fauna_on_background</item>

        <!-- Colores de outline -->
        <item name="colorOutline">@color/fauna_outline</item>
        <item name="colorOutlineVariant">@color/fauna_outline_variant</item>

        <!-- Colores de error -->
        <item name="colorError">@color/fauna_error</item>
        <item name="colorOnError">@color/fauna_on_error</item>

        <!-- Status bar transparente con iconos oscuros -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/fauna_surface</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Forzar modo claro siempre -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!-- Esquinas redondeadas modernas -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Fauna.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Fauna.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Fauna.LargeComponent</item>
    </style>

    <!-- Tema sin ActionBar para MainActivity -->
    <style name="Theme.Fauna.NoActionBar" parent="Theme.Fauna">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Edge-to-edge para experiencia moderna -->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="p">shortEdges</item>
    </style>

    <!-- Overlay para AppBar -->
    <style name="Theme.Fauna.AppBarOverlay" parent="ThemeOverlay.Material3.Light">
        <item name="colorSurface">@color/fauna_primary</item>
        <item name="colorOnSurface">@color/fauna_on_primary</item>
    </style>

    <!-- Overlay para Popups -->
    <style name="Theme.Fauna.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <!-- Formas redondeadas personalizadas -->
    <style name="ShapeAppearance.Fauna.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.Fauna.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.Fauna.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!-- Estilo para botones AR especiales -->
    <style name="Widget.Fauna.Button.AR" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/ar_object_highlight</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:elevation">8dp</item>
    </style>

    <!-- Estilo para tarjetas -->
    <style name="Widget.Fauna.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">@color/fauna_surface</item>
    </style>
</resources>